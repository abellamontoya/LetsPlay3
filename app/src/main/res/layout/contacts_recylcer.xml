<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/slightlytransparentrounded"
    android:id="@+id/VerticalRecycler"
    android:padding="16dp"

    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/contactImageView"
        android:background="@drawable/rounded_edittext_background"
        app:cardCornerRadius="30dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/user"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        />

    <TextView
        android:id="@+id/Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact Name"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/contactImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/contactDetailsTextView"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/contactDetailsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/contactImageView"
        app:layout_constraintTop_toBottomOf="@+id/Name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>
